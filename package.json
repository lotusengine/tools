{
  "name": "@lotusengine/sdk",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --stream --include-dependencies build",
    "build:fresh": "yarn clean",
    "build:watch": "tsc -b -w",
    "clean": "lerna run --parallel clean && rimraf .build-cache *.log coverage junit.xml",
    "coverage": "jest --coverage",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && rimraf node_modules",
    "package": "lerna publish --conventional-commits",
    "test": "jest",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn build && yarn depcheck && yarn coverage && yarn bundle",
    "watch": "yarn test:watch",
    "generate-types": "graphql-codegen"
  },
  "prettier": "@lotusengine/prettier-config",
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-resolvers": "^2.6.4",
    "@lotusengine/eslint-config-lotusengine": "^1.1.0",
    "@lotusengine/prettier-config": "^1.1.0",
    "@lotusengine/tsconfig": "^1.1.6",
    "@tsconfig/node14": "^1.0.0",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "dependency-check": "^4.1.0",
    "eslint": "^7.20.0",
    "graphql": "^16.5.0",
    "jest": "^27.1.0",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsc": "^2.0.3",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2"
  }
}
